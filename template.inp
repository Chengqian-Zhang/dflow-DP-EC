&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 400
      NGRIDS 5
      REL_CUTOFF 60
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-13
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 2
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 50
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 10
      &END
      &OT
        MINIMIZER DIIS 
        PRECONDITIONER FULL_SINGLE_INVERSE
        ENERGY_GAP 0.1
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
    &PRINT
      &PDOS
        COMPONENTS
        NLUMO -1
        ADD_LAST  NUMERIC
        &EACH
          MD 1
          GEO_OPT 0
        &END EACH
        COMMON_ITERATION_LEVELS 0
        APPEND T
      &END PDOS
      &V_HARTREE_CUBE ON
         STRIDE 4 4 1
         APPEND T
         &EACH
           MD 1
          GEO_OPT 0
         &END EACH
        ADD_LAST NUMERIC
      &END V_HARTREE_CUBE
    &END PRINT
  &END DFT


  &SUBSYS
    &CELL
      ABC [angstrom] 12.745532 13.399023 40.985034
      ALPHA_BETA_GAMMA  90 90 90
    &END CELL
    &COORD
@INCLUDE single.xyz 
    &END COORD
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH            
      POTENTIAL GTH-PBE-q1
    &END KIND                    
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH 
      POTENTIAL GTH-PBE-q6 
    &END KIND
    &KIND Sn 
      BASIS_SET DZVP-MOLOPT-SR-GTH 
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT SnO2
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL medium
  WALLTIME 86000 
&END GLOBAL
